//Servo Instructions
#include <Servo.h>		//Includes the Servo Instruction Library
Servo myservo;			//Declares an object
#define SERVOPIN 9		//names a constant. No direct connection to servo yet.

uint8_t degree;			//Variable declaration for servo position
//Datatype: uint8_t is an unsigned integer within 8 bits. [0,255]

void setup() {
  //Setup function happens ONE TIME, at the very beginning of the program.
  
  Serial.begin(9600); 	//Opens terminal on Arduino. It is called Serial Monitor generally speaking.
  while (!Serial);		//Waits for the serial to start before proceeding.
  
  myservo.attach(SERVOPIN);	//Connects the Servo Object to the program, and declares which pin it's connected by
}

void loop() {
  //Loop function repeats until the program is reset, a terminating statement is read, or the board loses power.
  
  degree = random(0,180);	//Sets to random integer within bounds [0,180]
  myservo.write(degree);	//Sends the random integer to the servo motor
  Serial.println(degree);	//Displays the random integer on the Serial Monitor
  delay(1000);				//Waits 1000 ms (1 second)
}

